@model PumpPalace.Models.Product

<link rel="stylesheet" href="~/css/site.css" />

@{
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Edit Product</h2>

<form asp-action="EditProduct" asp-controller="Admin" method="post">
    <div>
        <label for="Name">Name:</label>
        <input asp-for="Name" id="Name" placeholder="Enter product name" required />
        <span asp-validation-for="Name"></span> <!-- Wyświetlanie błędów walidacji -->
    </div>

    <div>
        <label for="Description">Description:</label>
        <textarea asp-for="Description" id="Description" placeholder="Enter product description" required></textarea>
        <span asp-validation-for="Description"></span> <!-- Wyświetlanie błędów walidacji -->
    </div>

    <div>
        <label for="Price">Price:</label>
        <input asp-for="Price" type="number" id="Price" step="0.01" placeholder="Enter product price" required />
        <span asp-validation-for="Price"></span> <!-- Wyświetlanie błędów walidacji -->
    </div>

    <div>
        <label for="DiscountPrice">Discount Price:</label>
        <input asp-for="DiscountPrice" type="number" id="DiscountPrice" step="0.01" placeholder="Enter discounted price (optional)" />
        <span asp-validation-for="DiscountPrice"></span> <!-- Wyświetlanie błędów walidacji -->
    </div>

    <div>
        <label for="Currency">Currency:</label>
        <select asp-for="Currency" id="Currency" required>
            <option value="">-- Select a currency --</option>
            @foreach (var currency in ViewBag.Currencies)
            {
                <option value="@currency.Value" @(currency.Value == Model?.Currency ? "selected" : "")>@currency.Text</option>
            }
        </select>
    </div>

    <div>
        <label for="PictureUrl">Picture URL:</label>
        <input asp-for="PictureUrl" id="PictureUrl" placeholder="Enter picture URL" />
        <span asp-validation-for="PictureUrl"></span> <!-- Wyświetlanie błędów walidacji -->
    </div>

    <div>
        <label for="InStock">In Stock:</label>
        <input asp-for="InStock" type="number" id="InStock" placeholder="Enter stock quantity" required />
        <span asp-validation-for="InStock"></span> <!-- Wyświetlanie błędów walidacji -->
    </div>

    <div>
        <label for="CategoryId">Category:</label>
        <select asp-for="CategoryId" id="CategoryId" required>
            <option value="">-- Select a category --</option>
            @foreach (var category in ViewBag.Categories)
            {
                <option value="@category.Value" @(category.Value == Model.CategoryId ? "selected" : "")>@category.Text</option>
            }
        </select>
        <span asp-validation-for="CategoryId"></span> <!-- Wyświetlanie błędów walidacji -->
    </div>

    <div>
        <label for="IsNew">Is New:</label>
        <input asp-for="IsNew" type="checkbox" id="IsNew" />
    </div>

    <div>
        <label for="IsPromotion">Is Promotion:</label>
        <input asp-for="IsPromotion" type="checkbox" id="IsPromotion" />
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
