@model PumpPalace.Models.Product

@{
    Layout = "~/Views/Shared/Layout.cshtml";
}

<link rel="stylesheet" href="~/css/site.css" />

<h2>Edit Product</h2>

<form asp-action="EditProduct" asp-controller="Admin" method="post">
    <div>
        <input type="hidden" name="Id" value="@Model.Id" />
        <label for="Name">Name:</label>
        <input type="text" id="Name" name="Name" value="@Model.Name" placeholder="Enter product name" required />
    </div>

    <div>
        <label for="Description">Description:</label>
        <textarea id="Description" name="Description" placeholder="Enter product description" required>@Model.Description</textarea>
    </div>

    <div>
        <label for="Price">Price:</label>
        <input type="number" id="Price" name="Price" value="@Model.Price" step="0.01" placeholder="Enter product price" required />
    </div>

    <div>
        <label for="DiscountPrice">Discount Price:</label>
        <input type="number" id="DiscountPrice" name="DiscountPrice" value="@Model.DiscountPrice" step="0.01" placeholder="Enter discounted price (optional)" />
    </div>

    <div>
        <label for="Currency">Currency:</label>
        <select id="Currency" name="Currency" required>
            <option value="">-- Select a currency --</option>
            @foreach (var currency in ViewBag.Currencies as List<SelectListItem>)
            {
                <option value="@currency.Value" @(currency.Value == Model.Currency ? "selected" : "")>@currency.Text</option>
            }
        </select>
    </div>

    <div>
        <label for="PictureUrl">Picture URL:</label>
        <input type="text" id="PictureUrl" name="PictureUrl" value="@Model.PictureUrl" placeholder="Enter picture URL" />
    </div>

    <div>
        <label for="InStock">In Stock:</label>
        <input type="number" id="InStock" name="InStock" value="@Model.InStock" placeholder="Enter stock quantity" required />
    </div>

    <div>
        <label for="CategoryId">Category:</label>
        <select id="CategoryId" name="CategoryId" required>
            <option value="">-- Select a category --</option>
            @foreach (var category in ViewBag.Categories as List<SelectListItem>)
            {
                <option value="@category.Value" @(category.Value == Model.CategoryId.ToString() ? "selected" : "")>@category.Text</option>
            }
        </select>
    </div>

    <div>
        <label for="IsNew">Is New:</label>
        <input type="checkbox" id="IsNew" name="IsNew" value="true" @(Model.IsNew ? "checked" : "") />
    </div>

    <div>
        <label for="IsPromotion">Is Promotion:</label>
        <input type="checkbox" id="IsPromotion" name="IsPromotion" value="true" @(Model.IsPromotion ? "checked" : "") />
    </div>

    <button type="submit" class="btn btn-primary">Update Product</button>
</form>