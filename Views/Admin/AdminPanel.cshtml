@{
    ViewData["Title"] = "Admin Panel";
    Layout = "Layout";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-success shadow-sm mt-3">
        <i class="bi bi-check-circle"></i> @TempData["Message"]
    </div>
}

<div class="admin-container mt-4">
    <h2 class="mb-4">Admin Panel</h2>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <div class="col">
            <div class="card-admin shadow-sm">
                <div class="card-admin-body">
                    <h5 class="card-title">Manage Products</h5>
                    <p class="card-text">Add, edit, and delete products in the store.</p>
                    <a href="@Url.Action("ManageProducts", "Admin")" class="btn btn-primary">Go to Products</a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card-admin shadow-sm">
                <div class="card-admin-body">
                    <h5 class="card-title">Order Management</h5>
                    <p class="card-text">View and process customer orders.</p>
                    <a href="@Url.Action("OrderManagement", "Admin")" class="btn btn-primary">Manage Orders</a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card-admin shadow-sm">
                <div class="card-admin-body">
                    <h5 class="card-title">User Management</h5>
                    <p class="card-text">Manage user accounts and permissions.</p>
                    <a href="@Url.Action("UserManagement", "Admin")" class="btn btn-primary">Manage Users</a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card-admin shadow-sm">
                <div class="card-admin-body">
                    <h5 class="card-title">Discounts</h5>
                    <p class="card-text">Create and manage discount campaigns.</p>
                    <a href="@Url.Action("Discounts", "Admin")" class="btn btn-primary">Manage Discounts</a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card-admin shadow-sm">
                <div class="card-admin-body">
                    <h5 class="card-title">Inventory Management</h5>
                    <p class="card-text">Track and manage stock levels for products.</p>
                    <a href="@Url.Action("InventoryManagement", "Admin")" class="btn btn-primary">Manage Inventory</a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card-admin shadow-sm">
                <div class="card-admin-body">
                    <h5 class="card-title">User Statistics</h5>
                    <p class="card-text">Analyze user activity and behavior.</p>
                    <a href="@Url.Action("UserStatistics", "Admin")" class="btn btn-primary">View Statistics</a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card-admin shadow-sm">
                <div class="card-admin-body">
                    <h5 class="card-title">Sales Report</h5>
                    <p class="card-text">Generate and view sales reports.</p>
                    <a href="@Url.Action("SalesReport", "Admin")" class="btn btn-primary">View Sales Report</a>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4 text-end">
        <button id="cleanExpiredButton" class="btn btn-danger">
            <i class="bi bi-x-circle"></i> Clean Expired 'New' Products
        </button>
    </div>
</div>
