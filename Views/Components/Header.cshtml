<header>
    <link rel="stylesheet" href="~/css/site.css" />
    <div class="logo-container text-center py-4">
        <span class="logo-text-left">PUMP</span>
        <a href="/">
            <img src="~/Images/Logo.png" alt="PumpPalace Logo" class="logo-image">
        </a>
        <span class="logo-text-right">PALACE</span>
    </div>


    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/">Home</a>
                    </li>
                    <!-- Categories with Dropdown -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="/Product/ProductList" id="productsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Products
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="productsDropdown">
                            <li><a class="dropdown-item" href="/Product/AccessoriesPage">Accesories</a></li>
                            <li><a class="dropdown-item" href="/Product/ForHimPage">For Him</a></li>
                            <li><a class="dropdown-item" href="/Product/ForHerPage">For Her</a></li>
                            <li><a class="dropdown-item" href="/Product/NewDropPage">New Drop</a></li>
                        </ul>
                    </li>

                    <!-- Admin Panel link visible only for Admins -->
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/AdminPanel">Admin Panel</a>
                        </li>
                    }
                </ul>

                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/Cart/Cart">Cart</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/Customer/MyAccount">My Account</a>
                    </li>

                    <!-- If user is not logged in -->
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Authentication/LoginPage">Login</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="/Authentication/RegisterPage">Register</a>
                        </li>
                    }
                    else
                    {
                        <!-- Show Logout if user is logged in -->
                        <li class="nav-item">
                            <a class="nav-link" href="/Authentication/Logout">Logout</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const dropdown = document.querySelectorAll('.dropdown');

        dropdown.forEach(item => {
            item.addEventListener('mouseover', function () {
                const menu = item.querySelector('.dropdown-menu');
                menu.classList.add('show');
            });

            item.addEventListener('mouseout', function () {
                const menu = item.querySelector('.dropdown-menu');
                menu.classList.remove('show');
            });
        });
    });
</script>