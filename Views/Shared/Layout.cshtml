<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PumpPalace</title>

    <!-- Link do CSS -->
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Walidacja formularzy, jeśli jest używana w widokach -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.13/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>
    <!-- Nagłówek -->
    <header>
        @Html.Partial("~/Views/Components/Header.cshtml")
    </header>

    <!-- Zawartość strony (widoki będą renderowane tutaj) -->
    <div class="container">
        @RenderBody()  <!-- Miejsce na zawartość widoku -->
    </div>

    <!-- Stopka -->
    <footer>
        @Html.Partial("~/Views/Components/Footer.cshtml")
    </footer>

    <!-- Sekcja na dodatkowe skrypty JS, które będą ładowane w widokach -->
    @RenderSection("Scripts", required: false)
</body>
</html>
