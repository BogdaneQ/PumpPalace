<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PumpPalace</title>

    <link rel="stylesheet" href="~/css/Layout.css" />
    <link rel="stylesheet" href="~/css/Admin.css" />
    <link rel="stylesheet" href="~/css/Authentication.css" />
    <link rel="stylesheet" href="~/css/Cart.css" />
    <link rel="stylesheet" href="~/css/Components.css" />
    <link rel="stylesheet" href="~/css/Customer.css" />
    <link rel="stylesheet" href="~/css/Order.css" />
    <link rel="stylesheet" href="~/css/Product.css" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <!-- Nagłówek -->
    <header>
        @Html.Partial("~/Views/Components/Header.cshtml")
    </header>

    <!-- Zawartość strony (widoki będą renderowane tutaj) -->
    <div class="container">
        @RenderBody()  <!-- Miejsce na zawartość widoku -->
    </div>

    <!-- Stopka -->
    <footer>
        @Html.Partial("~/Views/Components/Footer.cshtml")
    </footer>

    <!-- Sekcja na dodatkowe skrypty JS, które będą ładowane w widokach -->
    @RenderSection("Scripts", required: false)
</body>
</html>
