@{
    Layout = "Layout";
}

<div class="form-container">
    <div class="form-content">
        <h2 class="text-center">Zapomniałeś hasła?</h2>
        <form asp-action="SendPasswordResetEmail" asp-controller="Authentication" method="post">
            <div class="form-group">
                <label for="email">Podaj swój adres e-mail</label>
                <input type="email" id="email" name="Email" class="form-control" placeholder="Wpisz swój e-mail" required />
            </div>

            <button type="submit" class="btn btn-primary">Wyślij link resetujący hasło</button>
        </form>
    </div>
    <img src="~/Images/ForgotPassBG.jpg" class="form-image" style="background-image">
    </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success mt-3">@TempData["SuccessMessage"]</div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger mt-3">@TempData["ErrorMessage"]</div>
        }
    </div>
</div>
