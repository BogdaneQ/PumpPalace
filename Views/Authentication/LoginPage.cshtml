@model PumpPalace.Models.LoginViewModel
@{
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="form-container">
    <div class="form-content">
        <h2 class="text-center">Logowanie</h2>
        <form method="post" class="mt-4">
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" id="email" name="Email" class="form-control" value="@Model?.Email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Hasło</label>
                <input type="password" id="password" name="Password" class="form-control" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Zaloguj się</button>
        </form>

        <div class="mt-3 text-center">
            <a href="@Url.Action("ForgotPasswordPage", "Authentication")" class="link-primary">Zapomniałeś hasła?</a>
        </div>
        <div class="mt-3 text-center">
            <a href="@Url.Action("RegisterPage", "Authentication")" class="link-primary">Zarejestruj się</a>
        </div>
    </div>
    <img src="~/Images/LoginBG.jpg" class="form-image" style="background-image">
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
