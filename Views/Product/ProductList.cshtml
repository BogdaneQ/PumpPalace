@model IEnumerable<PumpPalace.Models.Product>

<link rel="stylesheet" href="~/css/site.css" />

@{
    Layout = "Layout";
}

<h2>Product List</h2>

<!-- Filter or sort options could go here -->
<div class="filter-sort mb-3">
    <!-- Możesz dodać opcje sortowania lub filtrowania produktów -->
</div>

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <!-- Product Image -->
                <img src="@Url.Content("~/images/" + product.PictureUrl)" class="card-img-top" alt="@product.Name" />

                <div class="card-body">
                    <!-- Product Name -->
                    <h5 class="card-title">@product.Name</h5>

                    <!-- Product Description -->
                    <p class="card-text">@product.Description</p>

                    <!-- Price and Discount Price -->
                    <div class="price">
                        @if (product.DiscountPrice.HasValue && product.DiscountPrice.Value < product.Price)
                        {
                            <span class="text-danger"><del>@product.Price.ToString("C2")</del></span>
                            <span class="text-success">@product.DiscountPrice.Value.ToString("C2")</span>
                        }
                        else
                        {
                            <span>@product.Price.ToString("C2")</span>
                        }
                    </div>

                    <!-- Add to Cart Button -->
                    <form action="@Url.Action("AddToCart", "Cart")" method="post" class="mt-3">
                        <input type="hidden" name="productId" value="@product.Id" />
                        <input type="number" name="quantity" value="1" min="1" class="form-control mb-2" style="width: 80px; display: inline-block;" />
                        <button type="submit" class="btn btn-primary btn-sm w-100">Add to Cart</button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>
