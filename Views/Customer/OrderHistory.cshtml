@model IEnumerable<PumpPalace.Models.OrderHistoryViewModel>

<h2>Order History</h2>
<table>
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Date</th>
            <th>Status</th>
            <th>Total</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.Date</td>
                <td>@order.Status</td>
                <td>@order.Total</td>
                <td>
                    <a href="@Url.Action("Details", "Orders", new { id = order.OrderId })">View Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
