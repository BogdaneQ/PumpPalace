@model PumpPalace.Models.ProfileSettingsViewModel
@{
    ViewData["Title"] = "Moje konto";
    Layout = "Layout";
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
<h2>Moje Konto</h2>

<table class="table-white account-table">
    <tr><th>Nazwa użytkownika</th><td>@Model.Username</td></tr>
    <tr><th>Imię</th><td>@Model.FirstName</td></tr>
    <tr><th>Nazwisko</th><td>@Model.LastName</td></tr>
    <tr><th>Email</th><td>@Model.Email</td></tr>
    <tr><th>Telefon</th><td>@Model.Phone</td></tr>
    <tr><th>Adres</th><td>@Model.Address</td></tr>
</table>


<div>
    <a class="btn btn-primary" href="@Url.Action("EditProfile", "Customer")">Edytuj Profil</a>
    <a class="btn btn-secondary" href="@Url.Action("OrderHistory", "Order")">Historia Zamówień</a>
</div>