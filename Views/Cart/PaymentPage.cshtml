@model PumpPalace.Models.PaymentViewModel
<h2>Payment</h2>
<form asp-action="ProcessPayment" method="post">
    <div>
        <label>Card Number</label>
        <input asp-for="CardNumber" type="text" />
    </div>
    <div>
        <label>Expiration Date</label>
        <input asp-for="ExpirationDate" type="text" />
    </div>
    <div>
        <label>CVV</label>
        <input asp-for="CVV" type="text" />
    </div>
    <button type="submit">Pay</button>
</form>
