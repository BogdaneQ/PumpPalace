@model PumpPalace.Models.OrderSummaryViewModel

@{
    ViewData["Title"] = "Order Summary";
    Layout = "Layout";
    <link rel="stylesheet" href="~/css/site.css" />
}

<h2 class="mb-4">Order Summary</h2>

<!-- Order Details -->
<div class="card mb-4">
    <div class="card-header">
        <strong>Order Details</strong>
    </div>
    <div class="card-body">
        <p><strong>Order ID:</strong> @Model.OrderId</p>
        <p><strong>Order Date:</strong> @Model.OrderDate.ToString("dd-MM-yyyy")</p>
        <p><strong>Order Status:</strong> @Model.OrderStatus</p>
        <p><strong>Total Price:</strong> @Model.TotalPrice.ToString("C")</p>
    </div>
</div>

<!-- Shipping and Billing Address -->
<div class="row mb-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <strong>Shipping Address</strong>
            </div>
            <div class="card-body">
                <p>@Model.ShippingAddress</p>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <strong>Billing Address</strong>
            </div>
            <div class="card-body">
                <p>@Model.BillingAddress</p>
            </div>
        </div>
    </div>
</div>

<!-- Ordered Items -->
<h4 class="mb-3">Ordered Items</h4>

@if (Model.OrderItems != null && Model.OrderItems.Any())
{
    <table class="table-white product-table">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Total Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderItems)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Quantity</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@item.TotalPrice.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No items in the order.</p>  <!-- If no order items exist -->
}

<!-- Proceed to Payment Button -->
<form action="@Url.Action("ProceedToPayment", "Cart")" method="post" style="display:inline;">
    <button type="submit" class="btn btn-danger">Proceed to Payment</button>
</form>
